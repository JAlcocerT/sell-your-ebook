---
import Instagram from './icons/Instagram.astro';
import Linkedin from './icons/Linkedin.astro';
import Twitter from './icons/Twitter.astro';
import { Image } from 'astro:assets';

import { author, whyReadThisBook, images } from '../config.json';
---

<div class='bg-gray-50'>
  <div class='max-w-screen-xl mx-auto py-16'>
    <h2 class='text-5xl mb-8 font-semibold text-gray-900 px-4'>
      {whyReadThisBook.title.split(' ').slice(0, 4).join(' ')}<!-- -->&nbsp;<span class='underline'>{whyReadThisBook.title.split(' ').slice(4).join(' ')}</span>
    </h2><div class='flex-none sm:flex'>
      <div class='sm:flex-1 px-4'>
        <Image
          class='mb-4 rounded-md'
          src={images.author.photo}
          width={500}
          height={500}
          alt={author.name}
          format={'avif'}
        />
      </div><div class='text-lg text-gray-600 sm:flex-1 px-4 font-body'>
        {whyReadThisBook.description.map((paragraph) => (
          <p class='mb-4'>
            {paragraph}
          </p>
        ))}<p class='text-sm italic text-gray-500'>
          {author.location}
        </p><div class='flex flex-row my-2'>
          <a title='Instagram link' href={author.instagramUrl} target='_blank'
            ><Instagram /></a
          >
          <a title='Twitter link' href={author.twitterUrl} target='_blank'
            ><Twitter /></a
          >
          <a title='LinkedIn link' href={author.linkedinUrl} target='_blank'>
            <Linkedin />
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
